mixin mixinVideo(video)
    .videoBlock
        a(href=`/videos/${video._id}`)
            .videoBlock__thumbnail 
            .videoBlock__content 
                .videoBlock__image
                .videoBlock__main
                    h4.videoBlock__title #{video.title}
                    h5 userName 
                    .videoBlock__viewDate 
                        if video.meta.views > 1
                            h6.videoBlock__views #{video.meta.views} views 
                        else
                            h6.videoBlock__views #{video.meta.views} view 
